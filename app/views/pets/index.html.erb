<h1>Pets @ VetCorp</h1>

<table>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= link_to "#{pet.name}", pet_path(id: pet.id) %></td>
        <td>
          <%= pet.last_visit_on %>
        </td>
          <td>
            <%= link_to "Edit", edit_pet_path(id: pet.id) %>
            <%= link_to "DESTROY!", pet_path(id: pet.id), method: :delete %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for @new_pet do |f| %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>

