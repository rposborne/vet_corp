<h1>Pets @ VetCorp</h1>

<% @pets.each do |pet| %>
  <p>
    <%= link_to "#{pet.name}", pet_path(id: pet.id) %>
  </p>
<% end %>

<!-- Rails form_tag helper  -->
<%= form_tag("/pets", class: "") do  %>
    <%# email_field_tag "pet[email]" %>
    <!-- Rails text_field_tag helper -->
    <%= text_field_tag "pet[name]" %>
    <%= submit_tag %>
<% end %>

